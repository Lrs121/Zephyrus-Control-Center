<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:slate="clr-namespace:Slate"
             xmlns:window="clr-namespace:Slate.View.Window"
             xmlns:view="clr-namespace:Slate.View"
             xmlns:control="clr-namespace:Slate.View.Control"
             x:Class="Slate.App">
    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon IsVisible="False"
                      Icon="/Resources/Icons/icon.ico"
                      ToolTipText="Zephyrus Control Center"
                      Clicked="TrayIcon_Clicked">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Quit"
                                        Click="Quit_Clicked" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>

    <Application.Resources>
        <controls:FontIcon x:Key="ICON_Processor"
                           FontFamily="/Resources/Fonts/segoe_fluent.ttf#Segoe Fluent Icons"
                           FontSize="24"
                           Glyph="&#xE950;" />

        <controls:FontIcon x:Key="ICON_Graphics"
                           FontFamily="/Resources/Fonts/segoe_fluent.ttf#Segoe Fluent Icons"
                           FontSize="24"
                           Glyph="&#xF211;" />

        <controls:FontIcon x:Key="ICON_Power"
                           FontFamily="/Resources/Fonts/segoe_fluent.ttf#Segoe Fluent Icons"
                           FontSize="24"
                           Glyph="&#xE945;" />

        <controls:FontIcon x:Key="ICON_Keyboard"
                           FontFamily="/Resources/Fonts/segoe_fluent.ttf#Segoe Fluent Icons"
                           FontSize="24"
                           Glyph="&#xE087;" />

        <controls:FontIcon x:Key="ICON_Grid"
                           FontFamily="/Resources/Fonts/segoe_fluent.ttf#Segoe Fluent Icons"
                           FontSize="24"
                           Glyph="&#xE80A;" />

        <controls:FontIcon x:Key="ICON_Settings"
                           FontFamily="/Resources/Fonts/segoe_fluent.ttf#Segoe Fluent Icons"
                           FontSize="24"
                           Glyph="&#xE115;" />
        
        <controls:FontIcon x:Key="ICON_SpeedFast"
                           FontFamily="/Resources/Fonts/segoe_fluent.ttf#Segoe Fluent Icons"
                           FontSize="24"
                           Glyph="&#xEC4A;" />

        <controls:FontIcon x:Key="ICON_Back"
                           FontFamily="/Resources/Fonts/segoe_fluent.ttf#Segoe Fluent Icons"
                           FontSize="12"
                           Glyph="&#xE64E;" />

        <controls:FontIcon x:Key="ICON_SpeedSlow"
                           FontFamily="/Resources/Fonts/segoe_fluent.ttf#Segoe Fluent Icons"
                           FontSize="18"
                           Glyph="&#xEC48;" />

        <controls:FontIcon x:Key="ICON_SpeedMedium"
                           FontFamily="/Resources/Fonts/segoe_fluent.ttf#Segoe Fluent Icons"
                           FontSize="18"
                           Glyph="&#xEC49;" />



        <controls:FontIcon x:Key="ICON_Thermometer"
                           FontFamily="/Resources/Fonts/segoe_fluent.ttf#Segoe Fluent Icons"
                           FontSize="18"
                           Glyph="&#xE9CA;" />

        <controls:FontIcon x:Key="ICON_GitHub"
                           FontFamily="/Resources/Fonts/fa5_brands.otf#Font Awesome 5 Brands"
                           FontSize="16"
                           Glyph="&#xF09B;" />
        
        <controls:FontIcon x:Key="ICON_FortAwesome"
                           FontFamily="/Resources/Fonts/fa5_brands.otf#Font Awesome 5 Brands"
                           FontSize="16"
                           Glyph="&#xF3A3;" />
    </Application.Resources>

    <Application.Styles>
        <fa:FluentAvaloniaTheme PreferSystemTheme="False"
                                PreferUserAccentColor="True"
                                UseSystemFontOnWindows="True"
                                RequestedTheme="Dark" />

        <StyleInclude Source="/Resources/Styles/ToggleSwitch.axaml" />
        <StyleInclude Source="/Resources/Styles/Card.axaml" />
        <StyleInclude Source="/Resources/Styles/LinkIcon.axaml" />
        
        <Style Selector="Button ContentPresenter">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.1" />
                    <BrushTransition Property="Background" Duration="0:0:0.1" />
                    <BrushTransition Property="Foreground" Duration="0:0:0.1" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Button:pointerover ContentPresenter">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.1" />
                    <BrushTransition Property="Background" Duration="0:0:0.1" />
                    <BrushTransition Property="Foreground" Duration="0:0:0.1" />
                </Transitions>
            </Setter>
        </Style>
    </Application.Styles>
</Application>