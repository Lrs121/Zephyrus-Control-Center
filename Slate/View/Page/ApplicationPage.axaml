<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mvvm="clr-namespace:Glitonea.Mvvm;assembly=Glitonea"
             xmlns:vm="clr-namespace:Slate.ViewModel.Page"
             xmlns:control="clr-namespace:Slate.View.Control"
             x:Class="Slate.View.Page.ApplicationPage"
             DataContext="{mvvm:DataContextSource vm:ApplicationPageViewModel}">
    <Grid RowDefinitions="*,1,Auto"
          Margin="5">
        <Grid Grid.Row="0"
              RowDefinitions="Auto,Auto,*"
              HorizontalAlignment="Stretch">
            <Border Grid.Row="0"
                    CornerRadius="6"
                    BorderBrush="#10FFFFFF"
                    BorderThickness="1"
                    Background="#08FFFFFF">
                <ToggleSwitch Content="Launch on startup"
                              IsChecked="{Binding ApplicationSettings.RunOnStartup, Mode=TwoWay}" />
            </Border>

            <Border Grid.Row="1"
                    CornerRadius="6"
                    BorderBrush="#10FFFFFF"
                    BorderThickness="1"
                    Background="#08FFFFFF"
                    Margin="0,5,0,0">
                <ToggleSwitch Content="Check for updates"
                              IsChecked="{Binding ApplicationSettings.CheckForUpdates, Mode=TwoWay}" />
            </Border>

            <Grid Grid.Row="2">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           TextWrapping="Wrap">
                    <Run Text="This computer program is in no way"
                         Foreground="#33FFFFFF" />
                    <LineBreak />
                    <Run Text="associated with ASUSTeK Computer Inc."
                         Foreground="#33FFFFFF" />                    
                    <LineBreak />
                    <LineBreak />
                    <Run Text="Don't get me wrong, their hardware is amazing"
                         Foreground="#33FFFFFF" />
                    <LineBreak />
                    <Run Text="but their software is completely dogshit."
                         Foreground="#33FFFFFF" />
                    <LineBreak />
                    <LineBreak />
                    <Run Text="🏳️‍⚧️" />
                </TextBlock>

            </Grid>
        </Grid>

        <Border Grid.Row="1"
                BorderBrush="White"
                BorderThickness="0,1,0,0"
                Margin="4,6"
                Opacity="0.1" />

        <Grid Grid.Row="2"
              ColumnDefinitions="*,Auto"
              Margin="6,0">
            <TextBlock Grid.Column="0">
                <Run Text="imagine icons here."
                     Foreground="#66FFFFFF" />

                <Run Text="| vddCore"
                     Foreground="#33FFFFFF" />
            </TextBlock>

            <TextBlock Grid.Column="1"
                       Text="1.0.0"
                       Opacity="0.2" />
        </Grid>
    </Grid>
</UserControl>